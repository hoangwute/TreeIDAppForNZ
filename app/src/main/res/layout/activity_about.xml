                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Programing"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/textView6"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quoc Hoang Nguyen\r\nJung Wook Lee\r\nLu Ming\r\nDaniel Jelavic" />
            <TextView
                android:id="@+id/txtDesign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Design &amp; Marketing"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/textView7"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Victorio Burcio-Martin\r\nSophia Spivak" />
            <TextView
                android:id="@+id/txtPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Photos"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/textView8"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Len Gillman" />
            <TextView
                android:id="@+id/txtSepcial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Special thanks to"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/textView9"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
