<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="vn.edu.topica.wizardtest.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtFirstHeader"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#0ddd2c"
        android:textSize="15dp"
        android:text="Margin" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkSmooth"
            android:button="@drawable/smooth_selector"
            android:checked="false"
            android:text="18"
            android:textColor="#0ddd2c"
            android:textAlignment="gravity"
            android:textStyle="italic" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkToothed"
            android:button="@drawable/toothed_selector"
            android:checked="false"
            android:text="31"
            android:textAlignment="gravity"
            android:textColor="#0ddd2c"
            android:textStyle="italic" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtSecondHeader"
        android:background="#0ddd2c"
        android:textSize="15dp"
        android:text="Arrangement" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkAlternating"
            android:button="@drawable/alternating_selector"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkOpposite"
            android:button="@drawable/opposite_selector"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkHandshaped"
            android:button="@drawable/handshaped_selector"
            android:checked="false" />
    </LinearLayout>

    <Button
        android:layout_height="wrap_content"
        android:text="FINISH"
        android:id="@+id/btnFinalise"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:background="#0ddd2c"
        android:layout_width="match_parent" />

</LinearLayout>
